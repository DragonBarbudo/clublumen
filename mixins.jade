    link(rel="stylesheet", href="site/style.css")
    link(rel="icon" type="image/png" href="favicon.png")

mixin menu
    div(data-sticky-container)
      div(data-sticky data-margin-top="0")
        .title-bar(data-responsive-toggle="mainMenu", data-hide-for="large")#mainMenuResponsive
          button.menu-icon(type="button" data-toggle="mainMenu")
          .title-bar-title: img(src="site/img/club-lumen.png").logo-img
        .top-bar.stacked-for-large#mainMenu
            .top-bar-left
              ul.menu(data-magellan data-smooth-scroll data-offset="280")
                li: a(href="#inicio").logo.show-for-large: img(src="site/img/club-lumen.png").logo-img
                li: a(href="https://www.lumen.com.mx/" target="_blank") Lumen
                li: a(href="#que-es") ¿Qué es?
                li: a(href="#activacion") Registro
                li: a(href="#promociones") Promociones
                li: a(href="#comprar-puntos") Comprar puntos
                li: a(href="#certificado-de-regalo") Certificado de regalo
                li: a(href="#contacto") Contacto
            .top-bar-right
              ul.menu
                li: a(href="#iniciar-sesion").show-for-large.button.initsession Iniciar sesión


mixin suscribe
    .suscribe
      .grid-container
        .grid-x.grid-padding-x.grid-margin-x
          .cell.medium-6
            h4 Suscribirse al boletín electrónico
            form(action="")
              .grid-x
                .cell-small-5: input(type="text" placeholder="Nombre")
                .cell-small-5: input(type="email" placeholder="Correo electrónico")
                .cell-small-2: button(type="submit").button Suscribirse
          .cell.medium-2
            h4 Síguenos en
              .social-icons
                a(href="https://www.facebook.com/pages/Papeleria-Lumen/139533542747946?ref=ts&fref=ts" target="_blank"): i.fi-social-facebook
                a(href="https://twitter.com/papelerialumen" target="_blank"): i.fi-social-twitter
          .cell.medium-4.infobottom
            p
              | #[strong Correo:] info@clublumen.com.mx
              br
              | #[strong Tel:] 01-800-841-7500 / (55) 8164-7300
              br
              | Lunes a Viernes de 09:00 a.m. a 06:00 p.m. CDMX

